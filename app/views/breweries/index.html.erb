<h1>Breweries</h1>

<div id="breweries">
  <p>Number of breweries: <%= @breweries.count %></p>
  <% @breweries.each do |brewery| %>
    <%= render brewery %>
    <p>
      <%= link_to "Show this brewery", brewery %>
    </p>
  <% end %>
</div>

