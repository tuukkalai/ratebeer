<p style="color: green"><%= notice %></p>
<h2>Join a club</h2>

<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h2>
      <ul>
        <% @membership.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @beer_clubs.nil? %>
  <p>Log in to join a club</p>
  <% elsif @beer_clubs.empty? %>
  <p>You're already in all of the clubs!</p>
  <% else %>
  Beer club: <%= f.select :beer_club_id, options_from_collection_for_select(@beer_clubs, :id, :to_s) %>
  <%= f.submit "Join" %>
  <% end %>
<% end %>